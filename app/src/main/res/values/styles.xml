<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LayoutFirstActivity">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="LayoutOtherActivity">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/all_corner_radius</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TextSettingsStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageViewSettingsStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="ImageViewIconSettingsStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:tint">@color/grey</item>
    </style>

    <style name="ImageViewIconSearchStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:tint">@color/grey</item>
    </style>

    <style name="EditTextSearchStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background"></item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ArtistNameStyle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackTimeStyle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageViewIconForRecycler">
        <item name="android:tint">@color/text_grey</item>
    </style>

    <style name="ButtonRefresh" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/dark_mode</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="CustomThemeSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/switch_track</item>
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="MediaSongNameStyle">
        <item name="android:textColor">@color/dark_mode</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MediaGroupNameStyle">
        <item name="android:textColor">@color/dark_mode</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="InfoSong">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InfoSongValue">
        <item name="android:textColor">@color/text_song_value</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabTextColor">@color/dark_mode</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="TextFragmentFavorites">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextFragmentPlaylists">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonNewPlaylist" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/dark_mode</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>



</resources>