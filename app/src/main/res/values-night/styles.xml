<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/all_corner_radius</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="TextSettingsStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageViewSettingsStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ImageViewIconSettingsStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/blue_light</item>
    </style>

    <style name="ImageViewIconSearchStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="EditTextSearchStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background"></item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>