<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:padding="0dp">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/name_application"
        android:textColor="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:paddingTop="20dp"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:text="@string/button_search"
        android:textSize="@dimen/main_text_size"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/all_corner_radius"
        app:icon="@drawable/ic_search_24"
        app:iconTint="@color/black"
        android:textAllCaps="false"
        app:iconGravity="textStart"/>

    <Button
        android:id="@+id/button_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/button_media"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_text_size"
        app:cornerRadius="@dimen/all_corner_radius"
        app:icon="@drawable/ic_media_24"
        app:iconGravity="textStart"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="@color/white"
        android:text="@string/button_settings"
        android:textSize="@dimen/main_text_size"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/all_corner_radius"
        app:icon="@drawable/ic_settings_24"
        app:iconTint="@color/black"
        app:iconGravity="textStart" />


</LinearLayout>