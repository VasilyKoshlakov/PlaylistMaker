<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/LayoutOtherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placeholderMediaEmpty"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="106dp"
            android:src="@drawable/not_found_placeholder_120"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/media_empty"
            style="@style/TextFragmentFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/media_empty"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_medium"/>

    </LinearLayout>

</LinearLayout>